#!/usr/bin/env ruby -w
require 'time'
require 'rake'
require 'benchmark'

File.open("run_each_spec_in_isolation.txt", 'w+') do |file|
  FileList['spec/**/*_spec.rb'].sort.select do |fn|
    puts "rspec #{fn}"
    measurement = Benchmark.measure { system "rspec #{fn}" }
    file.puts format("%#.1f\t%s", (measurement.total), fn)
    file.puts ''
  end
  measurement = Benchmark.measure { system('rspec') }
  file.puts format("%#.1f\t%s", (measurement.total), "total-time-for-specs-run-together")
end