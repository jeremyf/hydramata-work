<%= content_tag('dt', show.t(:name), show.container_content_tag_attributes(class: 'label')) %>
<%- show.values.each_with_index do |value, index| -%>
  <%= content_tag('dd', value.container_content_tag_attributes(class: 'value')) do %>
    <%= value.render(template: template) %>
  <%- end -%>
<%- end -%>
