<div class="<%= edit.dom_class %> form-group">
  <%= label_tag(edit.dom_id_for_field, edit.label, id: edit.dom_id_for_label) %>
  <div class="values">
  <% edit.each_with_index do |value, index| %>
    <%= text_field_tag(
      edit.dom_id_for_field(index: index+1),
       value,
       :name => edit.dom_name_for_field,
       :class => 'existing-input',
       'aria-labelledby' => edit.dom_id_for_label)
    %>
  <% end %>
    <%= text_field_tag(
      edit.dom_id_for_field,
       nil,
       :name => edit.dom_name_for_field,
       :class => 'blank-input',
       'aria-labelledby' =>  edit.dom_id_for_label)
    %>
  </div>
  <% edit.with_text_for(:help) do |help| %>
    <p class="help-block"><%= help %></p>
  <% end %>
</div>
