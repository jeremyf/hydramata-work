<div class="<%= edit.dom_class %> form-group">
  <%= label_tag(edit.dom_id_for_field, edit.label, edit.dom_label_attributes) %>
  <div class="values">
  <% edit.each_with_index do |value, index| %>
    <%= text_field_tag(
      edit.dom_id_for_field(index: index+1),
      value,
      edit.dom_input_attributes(class: 'existing-input')
    ) %>
  <% end %>
    <%= text_field_tag(
      edit.dom_id_for_field,
      nil,
      edit.dom_input_attributes(class: 'blank-input')
    ) %>
  </div>
  <% edit.with_text_for(:help) do |help| %>
    <p class="help-block"><%= help %></p>
  <% end %>
</div>
